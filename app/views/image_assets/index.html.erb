<p id="notice"><%= notice %></p>

<h1>Image Assets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_assets.each do |image_asset| %>
      <tr>
        <td><%= image_asset.name %></td>
        <td><%= image_asset.image %></td>
        <td><%= image_asset.tags_id %></td>
        <td><%= link_to 'Show', image_asset %></td>
        <td><%= link_to 'Edit', edit_image_asset_path(image_asset) %></td>
        <td><%= link_to 'Destroy', image_asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

